# Naviksha AI Backend Environment Configuration
# Copy this file to .env and update the values

# MongoDB Configuration
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-this-is-a-very-long-secret-key-for-jwt-hs512-algorithm-requirement

# Admin Configuration (Optional)
ADMIN_SECRET=your-admin-secret-key

# AI Service Configuration
AI_SERVICE_URL=http://ai-report-service:8000
AI_SERVICE_TIMEOUT=30000
AI_SERVICE_ENABLED=true

# Puppeteer Microservice URL
PUPPETEER_MS_URL=http://localhost:5200

# Email Configuration
EMAIL_ENABLED=true
EMAIL_FROM=naviksha@example.com
EMAIL_FROM_NAME=Naviksha AI

# SMTP Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Server Configuration
PORT=4000
SPRING_PROFILES_ACTIVE=dev